<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        background: #f1f5f9;
        margin: 0;
        min-height: 100vh;
      }
      header {
        background: #0f172a;
        color: #ffffff;
        padding: 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      header h1 {
        margin: 0;
        font-size: 1.75rem;
      }
      header span {
        opacity: 0.85;
      }
      main {
        padding: 2rem;
        display: grid;
        gap: 2rem;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      }
      section {
        background: #ffffff;
        border-radius: 16px;
        padding: 1.75rem;
        box-shadow: 0 15px 35px rgba(15, 23, 42, 0.12);
      }
      h2 {
        margin-top: 0;
        font-size: 1.35rem;
      }
      label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      input,
      select {
        width: 100%;
        padding: 0.65rem 0.85rem;
        border-radius: 10px;
        border: 1px solid #cbd5f5;
        margin-bottom: 1rem;
      }
      button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: #2563eb;
        color: #ffffff;
        border: none;
        padding: 0.65rem 1.4rem;
        border-radius: 999px;
        cursor: pointer;
        transition: background 0.2s ease;
      }
      button:hover {
        background: #1d4ed8;
      }
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th,
      td {
        text-align: left;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e2e8f0;
      }
      .delete button {
        background: #ef4444;
      }
      .delete button:hover {
        background: #dc2626;
      }
      .notice {
        background: #ecfdf5;
        color: #047857;
        border: 1px solid #a7f3d0;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        margin-bottom: 1rem;
      }
      .error {
        background: #fee2e2;
        color: #b91c1c;
        border: 1px solid #fecaca;
        padding: 0.75rem 1rem;
        border-radius: 12px;
        margin-bottom: 1rem;
      }
      form.inline {
        display: inline;
      }
    </style>
  </head>
  <body>
    <header>
      <div>
        <h1>Adminbereich</h1>
        <span>Angemeldet als <strong><%= admin.email %></strong></span>
      </div>
      <form class="inline" method="post" action="/logout">
        <button type="submit">Abmelden</button>
      </form>
    </header>
    <main>
      <section>
        <h2>Lokalen Benutzer anlegen/aktualisieren</h2>
        <% if (message === 'user_saved') { %>
        <div class="notice">Benutzer wurde gespeichert.</div>
        <% } else if (error && error !== 'not_found') { %>
        <div class="error"><%= error %></div>
        <% } %>
        <form method="post" action="/admin/users">
          <label for="email">E-Mail-Adresse</label>
          <input id="email" name="email" type="email" placeholder="benutzer@example.com" required />

          <label for="username">Benutzername (optional)</label>
          <input id="username" name="username" type="text" placeholder="partner123" />

          <label for="displayName">Anzeigename</label>
          <input id="displayName" name="displayName" type="text" placeholder="Partner GmbH" />

          <label for="role">Rolle</label>
          <select id="role" name="role">
            <option value="user">user</option>
            <option value="manager">manager</option>
          </select>

          <label for="password">Passwort (nur ausfüllen, wenn gesetzt/aktualisiert werden soll)</label>
          <input id="password" name="password" type="password" />

          <button type="submit">Speichern</button>
        </form>
      </section>
      <section>
        <h2>Bestehende Benutzer</h2>
        <% if (message === 'user_deleted') { %>
        <div class="notice">Benutzer wurde gelöscht.</div>
        <% } else if (error === 'not_found') { %>
        <div class="error">Der Benutzer konnte nicht gefunden werden.</div>
        <% } %>
        <% if (!users.length) { %>
        <p>Noch keine lokalen Konten vorhanden.</p>
        <% } else { %>
        <table>
          <thead>
            <tr>
              <th>E-Mail</th>
              <th>Benutzername</th>
              <th>Rolle</th>
              <th>Aktionen</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function (user) { %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.username || '–' %></td>
              <td><%= user.role %></td>
              <td class="delete">
                <form class="inline" method="post" action="/admin/users/<%= user.id %>/delete">
                  <button type="submit">Löschen</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } %>
      </section>
    </main>
    <script>
      document.addEventListener('click', (event) => {
        if (event.target.closest('button')) {
          fetch('/session/ping', { method: 'POST', credentials: 'include' }).catch(() => {});
        }
      });
    </script>
  </body>
</html>
